{
  "name": "MyTaskList",
  "version": "0.9.0",
  "manifest_version": 2,
  "description": "Management my everyday's task lists.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png" ,
    "default_title": "My Task List",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
